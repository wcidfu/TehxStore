<Window x:Class="TehxStore.Windows.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TehxStore.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Images/icon.ico" 
        
        Title="Авторизация" Height="549" Width="410">
    <Grid>
        <Button x:Name="SignInButton"  Content="Войти&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Height="29" Width="166"  Margin="122,463,0,0" FontFamily="Times New Roman" FontSize="20" FontWeight="Bold" Background="#FF7776E3" Click="SignInButton_Click"/>
        <TextBox x:Name="LoginBox" HorizontalAlignment="Left" Margin="33,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="314" Height="35" FontFamily="Times New Roman" FontSize="20"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="314" Height="35" FontFamily="Times New Roman" FontSize="22" RenderTransformOrigin="0.5,0.5" Margin="33,251,0,0">
            <PasswordBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </PasswordBox.RenderTransform>
        </PasswordBox>
        <Label Content="Авторизация" HorizontalAlignment="Left" Margin="141,31,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="20" FontWeight="Bold"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="33,138,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="33,218,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <Button x:Name="SignInGuestButton" Content="Войти как гость" HorizontalAlignment="Left" Margin="33,300,0,0" VerticalAlignment="Top" Background="White" BorderBrush="White" FontFamily="Times New Roman" FontSize="16" Click="SignInGuestButton_Click"/>

    </Grid>
</Window>
